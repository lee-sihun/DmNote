{
  "name": "dm-note",
  "version": "1.2.0",
  "description": "DM NOTE",
  "main": "src/main/main.js",
  "scripts": {
    "start": "npm run type-check && cross-env NODE_ENV=development concurrently \"npm run dev\" \"wait-on tcp:3000 && electron .\"",
    "dev": "vite",
    "prebuild": "npm run type-check && vite build",
    "build": "electron-builder --win",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "build": {
    "appId": "com.dmnote.app",
    "productName": "DM NOTE",
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "extraResources": [
      {
        "from": "build/",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/renderer/**/*",
      "src/main/**/*"
    ]
  },
  "authors": [
    {
      "name": "lee-sihun",
      "role": "Developer",
      "url": "https://github.com/lee-sihun"
    },
    {
      "name": "yeonu-me",
      "role": "Designer",
      "url": "https://github.com/yeonu-me"
    }
  ],
  "author": "lee-sihun",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.15.27",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "vite": "^7.1.5",
    "vite-plugin-svgr": "^4.5.0",
    "wait-on": "^8.0.1"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "electron-store": "^8.2.0",
    "i18next": "^25.5.2",
    "node-global-key-listener-extended": "github:lee-sihun/node-global-key-listener",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.7.3",
    "three": "^0.180.0",
    "zustand": "^5.0.3"
  }
}
